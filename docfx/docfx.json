{
  "metadata": [
    {
      "src": [
        {
          "src": "../src/bls",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "chia-dotnet-bls",
      "_appTitle": "chia-dotnet-bls",
      "_appLogoPath": "images/favicon-32x32.png",
      "_appFaviconPath": "images/favicon.ico",
      "_enableSearch": true,
      "pdf": true
    }
  }
}